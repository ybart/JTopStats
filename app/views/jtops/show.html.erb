<% charts_js %>
<section id="content" class="body">
	<%= form_tag(chart_clips_path, :method => :get) do %>
	<%= @jtop.rankings.count %> results | For selection: <%= image_submit_tag 'chart.png', :class => 'chart' %>
	<table class="data">
		<thead>
		<tr>
			<th></th>
			<th><%= sort_link 'Rang', :rank %></th>
			<th><%= sort_link 'Progression', :progress %></th>
			<th><%= sort_link 'Clip', :clip %></th>
			<th><%= sort_link 'Votes', :vote_count %></th>
			<th><%= sort_link 'Score Votes', :vote_score %></th>
			<th><%= sort_link 'J-Potes', :pal_count %></th>
			<th><%= sort_link 'Score J-Potes', :pal_score %></th>
			<th><%= 'Total' %></th>
		</tr>
		</thead>
		<tbody>
	<% @rankings.clips.artists.each {|x|x} %>
	<% @rankings.each { |r| %>
		<tr class="<%= cycle('odd', 'even') %>">
			<td><%= check_box_tag 'clip_ids[]', r.clip_id, false, :id => "clip_id_#{r.clip_id}", :class => 'select' %></td>
			<td><%= r.rank %></td>
			<td><%= r.progress %></td>
			<td><%= "#{r.clip.artist.name} - #{r.clip.title}" %></td>
			<td><%= r.vote_count %></td>
			<td><%= r.vote_score %></td>
			<td><%= r.pal_count %></td>
			<td><%= r.pal_score %></td>
			<td><%= r.pal_score + r.vote_score %></td>
		</tr>
	<% } %>	
	<% end %>	
	</tbody>
	</table>
</section>
